<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
        id="report_pollncard_cm"
        string="Pollncard"
        model="res.partner"
        report_type="qweb-pdf"
        name="polln_base.pollncard_template_cm"
        file="polln_base.pollncard_template_cm"
        print_report_name="'Polln Card Members'"
    />

    <template id="pollncard_template_cm">
        <t t-call="web.basic_layout">
            <div class="page">

                <t t-foreach="docs" t-as="partner">
                    <div style="width: 48%; display: inline-table; height:5.5cm;">
                        <table style="width:8.5cm; height:5.5cm; border: 1pt solid black; border-collapse:separate; margin:1pt;">
                            <tr >
                                <td align="center" valign="top">
                                    <img src="/polln_base/static/src/img/logo-polln.png"
                                        style="display:table; margin: 3pt;width:55%;height:2.2cm;"/>
                                </td>
                            </tr>
                            <tr>
                                <td><div align="center" style="font-size:12pt;font-weight: bold;"><t t-esc="partner.name"/></div></td>
                            </tr>
                            <tr>
                                <t t-if="partner.parent_eater_id.name">
                                    <td><div align="center" style="font-size:8pt">by <t t-esc="partner.parent_eater_id.name"/></div></td>
                                </t>
                            </tr>
                            <tr>
                                <td align="center">
                                    <img alt="barcode"
                                        t-if="partner.barcode or partner.parent_eater_id.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('EAN13', partner.barcode or partner.parent_eater_id.barcode, 340, 70)"
                                        style="height:35pt;width:50%;margin-bottom:8px;"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>

            </div>
        </t>
    </template>
</odoo>
